<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"/>
            <stroke
                android:width="1px"
                android:color="#a8abad"/>
        </shape>
    </item>
    <item
        android:bottom="1px"
        android:left="1px"
        android:right="1px">
        <shape>
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"/>
            <solid android:color="#ffffff"/>
        </shape>
    </item>
</layer-list>